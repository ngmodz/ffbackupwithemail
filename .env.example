# ===================================
# CASHFREE PAYMENT GATEWAY
# ===================================
# Test Environment (Sandbox) - Replace with your actual CashFree credentials
VITE_CASHFREE_APP_ID=your_cashfree_app_id_here
CASHFREE_SECRET_KEY=your_cashfree_secret_key_here
CASHFREE_WEBHOOK_SECRET=your_cashfree_webhook_secret_here
VITE_CASHFREE_ENVIRONMENT=SANDBOX  # or 'PRODUCTION' for live payments

# CashFree API Configuration
VITE_CASHFREE_API_VERSION=2023-08-01
VITE_CASHFREE_SANDBOX_URL=https://sandbox.cashfree.com/pg
VITE_CASHFREE_PRODUCTION_URL=https://api.cashfree.com/pg

# Production Environment (Uncomment when ready for production)
# VITE_CASHFREE_APP_ID=your_production_app_id_here
# CASHFREE_SECRET_KEY=your_production_secret_key_here
# CASHFREE_WEBHOOK_SECRET=your_production_webhook_secret_key_here

# ===================================
# FIREBASE CONFIGURATION  
# ===================================
# Replace with your actual Firebase project credentials
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ===================================
# APPLICATION CONFIGURATION
# ===================================
VITE_APP_URL=http://localhost:8083
VITE_ENVIRONMENT=development
# For Vercel deployment (update with your Vercel domain)
VERCEL_URL=your-app-name.vercel.app

# ===================================
# VERCEL CONFIGURATION
# ===================================
VERCEL_FUNCTIONS_URL=https://your-app-name.vercel.app/api

# ===================================
# WEBHOOK & PAYMENT URLS
# ===================================
VITE_RETURN_URL=https://your-app-name.vercel.app/payment-status
CASHFREE_WEBHOOK_URL=https://your-app-name.vercel.app/api/payment-webhook
PAYMENT_SUCCESS_URL=https://your-app-name.vercel.app/payment-status?status=success
PAYMENT_FAILURE_URL=https://your-app-name.vercel.app/payment-status?status=failed

# ===================================
# SECURITY
# ===================================
VITE_ENCRYPTION_KEY=ff_tournaments_2024_secure_key_12345

# ===================================
# FIREBASE SERVICE ACCOUNT (for API Functions)
# ===================================
# Get this from Firebase Console > Project Settings > Service Accounts > Generate new private key
# Format as a single line JSON string
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"your_private_key_id","private_key":"-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n","client_email":"your_service_account_email","client_id":"your_client_id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"your_cert_url"}

# ===================================
# DEVELOPMENT CONFIGURATION
# ===================================
# Port for development API server (optional, defaults to 3001)
DEV_API_PORT=3001